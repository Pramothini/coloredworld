<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#ff222222"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="#1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plate_number"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#93f6f6f6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans1"
        android:layout_below="@+id/plate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/unsure"
        android:onClick="SubmitAnswer"
        android:text="12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans2"
        android:layout_below="@+id/plate"
        android:layout_centerHorizontal="true"
        android:onClick="SubmitAnswer"
        android:text="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans3"
        android:layout_alignTop="@+id/ans2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="SubmitAnswer"
        android:text="11" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unsure"
        android:id="@+id/unsure"
        android:layout_below="@+id/ans2"
        android:onClick="SubmitAnswer"
        android:layout_toLeftOf="@+id/ans2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:id="@+id/nothing"
        android:singleLine="true"
        android:layout_below="@+id/ans2"
        android:onClick="SubmitAnswer"
        android:layout_toStartOf="@+id/ans3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/plate"
        android:src="@drawable/plate1"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/stop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:id="@+id/reset"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="reset"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
